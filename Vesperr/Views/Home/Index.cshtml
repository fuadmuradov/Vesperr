        </div>

    </div>
</section><!-- End Clients Section -->
<!-- ======= About Us Section ======= -->
<section id="about" class="about">
    <div class="container">

        <div class="section-title" data-aos="fade-up">
            <h2>About Us</h2>
        </div>

        <div class="row content">
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="150">
                <p>
                   @Model.abouts.title
                </p>
                <ul>
                    <li><i class="ri-check-double-line"></i>@Model.abouts.comment1</li>
                    <li><i class="ri-check-double-line"></i>@Model.abouts.comment2</li>
                    <li><i class="ri-check-double-line"></i>@Model.abouts.comment3</li>
