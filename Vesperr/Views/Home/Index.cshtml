        </div>
    </div>

</section><!-- End Hero -->

<!-- ======= Clients Section ======= -->
<section id="clients" class="clients clients">
    <div class="container">

        <div class="row">

            @foreach (var item in Model.clientsections)
            {
            <div class="col-lg-2 col-md-4 col-6">
                <img src="~/assets/img/clients/@item.photo" class="img-fluid" alt="" data-aos="zoom-in">
            </div>
